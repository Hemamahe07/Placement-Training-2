def numRookCaptures(board):
    for i in range(8):
        for j in range(8):
            if board[i][j] == 'R':
                r, c = i, j
    res = 0
    for dx, dy in [(1,0),(-1,0),(0,1),(0,-1)]:
        x, y = r, c
        while 0 <= x < 8 and 0 <= y < 8:
            x += dx; y += dy
            if not (0 <= x < 8 and 0 <= y < 8): break
            if board[x][y] == 'B': break
            if board[x][y] == 'p':
                res += 1
                break
    return res
