class PowXN {
    static double pow(double x, int n) {
        if (n == 0) return 1;
        double half = pow(x, n / 2);
        if (n % 2 == 0) return half * half;
        return n > 0 ? half * half * x : half * half / x;
    }

    public static void main(String[] args) {
        System.out.println(pow(2, -3));
    }
}
