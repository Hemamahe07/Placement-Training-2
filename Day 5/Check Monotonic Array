class Monotonic {
    public static void main(String[] args) {
        int[] a = {1,2,2,3};
        boolean inc = true, dec = true;

        for (int i = 1; i < a.length; i++) {
            if (a[i] < a[i-1]) inc = false;
            if (a[i] > a[i-1]) dec = false;
        }
        System.out.println(inc || dec);
    }
}
