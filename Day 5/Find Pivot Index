class PivotIndex {
    public static void main(String[] args) {
        int[] a = {1,7,3,6,5,6};
        int total = 0, left = 0;
        for (int x : a) total += x;

        for (int i = 0; i < a.length; i++) {
            if (left == total - left - a[i]) {
                System.out.println(i);
                return;
            }
            left += a[i];
        }
        System.out.println(-1);
    }
}
