class MaxAverage {
    public static void main(String[] args) {
        int[] a = {1,12,-5,-6,50,3};
        int k = 4, sum = 0;

        for (int i = 0; i < k; i++) sum += a[i];
        int max = sum;

        for (int i = k; i < a.length; i++) {
            sum += a[i] - a[i-k];
            max = Math.max(max, sum);
        }
        System.out.println((double)max / k);
    }
}
